{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["kube", "k8s-openapi"],
      "matchManagers": ["cargo"],
      "groupName": "rust kube"
    }
  ]
}
